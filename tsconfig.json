    "files": [
        "apiextensions/customresource.ts",
        "apps/v1/deployment.ts",
        "core/index.ts",
        "core/v1/namespace.ts",
        "core/v1/secret.ts",
        "helm/index.ts",
        "helm/v3/index.ts",
        "helm/v3/release.ts",
        "storage/v1/storageclass.ts",
        "yaml/configfile.ts",
    ]
}